{
  "name": "gitbook-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for GitBook integration",
  "main": "dist/index.js",
  "bin": {
    "gitbook-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/auto-detect.js",
    "build:clean": "tsc",
    "auto-detect": "npm run build:clean && node scripts/auto-detect.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --streamable-http",
    "start:api": "node dist/api.js",
    "test": "npm run build && node test.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "natural": "^8.1.0",
    "node-fetch": "^3.3.2",
    "turndown": "^7.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
